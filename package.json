{
  "name": "react-selection-popup",
  "version": "0.2.0",
  "description": "Simple, yet convenient React popup component that shows when you select texts.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonmz/react-selection-popup.git"
  },
  "author": "Jason Mendoza <mernstackdev729@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "react",
    "typescript",
    "selection-popup"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "start": "npx parcel ./example/index.html --open --port 3000",
    "prepare": "npm run build",
    "prepublishOnly": "npm run prettier && npm run lint",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\""
  },
  "devDependencies": {
    "@types/react": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "parcel": "^2.9.2",
    "prettier": "^2.8.8",
    "process": "^0.11.10",
    "react": ">=16",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "react": ">=16"
  }
}
